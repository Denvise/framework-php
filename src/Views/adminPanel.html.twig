{% extends 'templates/adminTemp.html.twig' %}
{% block admin %}
    <h1>Gérer vos articles</h1>
    <div class="alert alert-warning">
        Bienvenue sur votre panel admin, gérer vos épisodes et vos commentaires
    </div>

    <p>
        <a href="?p=posts.add" class="btn btn-success">Ajouter un épisode</a>
    </p>

    <table class="table">
        <thead>
        <tr>
            <td>N°</td>
            <td>Titre de l'épisode</td>
            <td>Actions</td>
        </tr>
        </thead>
        <tbody>
        {% for articles in articles %}
            <tr>
                <td class="id">{{articles.id}}</td>
                <td>{{articles.titre}}</td>
                <td>
                    <a href="?p=admin.posts.edit&id={{articles.id}}" class="btn btn-primary">Editer</a>
                    <form action="?p=admin.posts.delete" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="<?= $post->id ?>">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
